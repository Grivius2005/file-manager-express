<main>
    <aside>
        <div class="manager-control">
            <div class="button" onclick="switchFolderDialog()">
               <div class="content">
                    <p>Add folder</p>
                </div>
                <div class="fold"></div>
            </div>
            <div class="button" onclick="switchTxtFileDialog()">
                <div class="content">
                    <p>Add txt file</p>
                </div>
                <div class="fold"></div>
            </div>
        </div>

    </aside>
    <div id="main-content">
        <div class="manager-view">
            <h2>Folders</h2>
            <div class="folders-area">
                {{#each storageData.folders}}
                    {{> folder}}
                {{/each}}
            </div>
            <h2>Files</h2>
            <div class="files-area">
                {{#each storageData.files}}
                    {{> file}}
                {{/each}}
            </div>
        </div>

    </div> 
</main>


<dialog id="fileDialog" class="home-dialogs">
    <form method="post" action="/addTxtFile" class="content">
        <h2>Txt File</h2>
        <div class="form-inputs">
            <label for="filename">File name</label>
            <input type="text" name="filename">
        </div>

        <div class="form-buttons">
            <button type="submit" onclick="switchTxtFileDialog()">Create</button>
            <button type="button" onclick="switchTxtFileDialog()">Cancel</button>
        </div>

    </form>
</dialog>

<dialog id="folderDialog" class="home-dialogs">
    <form method="post" action="/addFolder" class="content">
        <h2>Folder</h2>
        <div class="form-inputs">
            <label for="foldername">Folder name</label>
            <input type="text" name="foldername">
        </div>
        <div class="form-buttons">
            <button type="submit" onclick="switchFolderDialog()">Create</button>
            <button type="button" onclick="switchFolderDialog()">Cancel</button>
        </div>
    </form>
</dialog>


<script src="js/home.js"></script>

